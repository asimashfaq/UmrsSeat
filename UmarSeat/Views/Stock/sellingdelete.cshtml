@using UmarSeat.Helpers
@model UmarSeat.Models.StockTransfer
@{
    ViewBag.Title = "Delete";
    Layout = null;
}


<link href="~/Content/assets/plugins/boostrapv3/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link class="main-stylesheet" href="~/Content/pages/css/pages.css" rel="stylesheet" type="text/css" />
<link href="~/Content/assets/plugins/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css" />
<link href="~/Content/pages/css/pages-icons.css" rel="stylesheet" type="text/css">

<div class="container-fluid  bg-white">
    <!-- START PANEL -->
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <div class="panel-title">
                Do you Want to Delete @Html.Raw(Model.pnrNumber) ?
            </div>
            <div class="export-options-container pull-right"></div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">


            <table class="table table-responsive ">
                <tbody>
                    <tr>
                        <td>PNR #</td>
                        <td>@Html.Raw(Model.pnrNumber)</td>
                        <td>Airline</td>
                        <td>@Html.Raw(Model.airLine)</td>
                    </tr>
                    <tr>
                        <td>Stock ID</td>
                        <td>@Html.Raw(Model.stockId)</td>
                        <td>Agent ID</td>
                        <td>@Html.Raw(Model.idAgent)</td>
                    </tr>
                    <tr><td>Selling Branch</td><td>@Html.Raw(Model.sellingBranch)</td><td>Selling Price</td><td>@Html.Raw(Model.sellingPrice)</td></tr>
                    <tr><td>Costs</td><td>@Html.Raw(Model.cost)</td><td>Margin</td><td>@Html.Raw(Model.margin)</td></tr>
                    <tr><td>Number of Seats</td><td>@Html.Raw(Model.noOfSeats)</td><td>Is Package</td><td>@Html.Raw(Model.isPackage)</td></tr>
                    <tr><td>Advance Amount</td><td>@Html.Raw(Model.advanceAmount)</td><td>Advance Date</td><td>@Html.Raw(Model.advanceDate)</td></tr>
                    <tr><td>GDS PNR #</td><td>@Html.Raw(Model.gdsPnrNumber)</td><td>Catalyst Invoice #</td><td>@Html.Raw(Model.catalystInvoiceNumber)</td></tr>
                </tbody>
            </table>

            @Ajax.RawActionLink(string.Format("<i class=\"fa fa-remove\" ></i> Delete {0}", Model.pnrNumber), "Delete", null, new { id = Model.id_StockTransfer },
            new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "onDeleteSuccess",
                Confirm = "Are you sure you want to delete this?"
            },
                              new { @class = "btn btn-danger", id = "cnfrmDelete" })
            <button id="close" type="button" class="btn btn-default"> No</button>
        </div>
    </div>
    <!-- END PANEL -->
</div>




<script src="~/Content/assets/plugins/jquery/jquery-1.8.3.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script>
    function onDeleteSuccess() {
        $("#modalSlideUp").click();
        window.location.reload();
    }

    $(document).ready(function () {

        $("#close").click(function () {
            $("#modalSlideUp").click();
        });

    });
</script>
