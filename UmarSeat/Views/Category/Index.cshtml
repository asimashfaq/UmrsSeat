@model IEnumerable<UmarSeat.Models.Category>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/overlay-bootstrap.css" rel="stylesheet" />
<style>
    .wp {
        word-wrap: break-word;
    }

    table tbody tr td:nth-child(1), table thead tr th:nth-child(1) {
        width: 70% !important;
    }

    table {
        table-layout: fixed;
    }
</style>
<div class="container-fluid  bg-white">
    <!-- START PANEL -->
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <div class="panel-title">
                List of Categories
            </div>
            <div class="pull-right">
                <a href="/category/create" class="btn btn-animated btn-primary text-white" data-toggle="modal" data-target="#mCategory">
                    <i class="fa fa-plus"></i> Add Category
                </a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body" id="dv1">
            @{Html.RenderPartial("_categorylist", Model);}

        </div>
    </div>
    <!-- END PANEL -->
</div>



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <style>
        .table > tfoot > tr > th, .table > thead > tr > th {
            border-top: 0px !important;
        }

        .TableTools {
